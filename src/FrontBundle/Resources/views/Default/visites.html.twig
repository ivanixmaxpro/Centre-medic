{% extends "FrontBundle:Default:index.html.twig " %}
{% block title %}Visites{% endblock %}
{% block page_content %}
    <!-- Page Content -->
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-lg-12 col-md-12">
                <h1>Visites</h1>
                <p>Llistat de visites:</p>
                <table class="table table-hover">
                <th>ID</th>
                <th>Data</th>
                {% for visita in visites %}
                <tr>
                	<td>{{ visita.id }}</td>
        			<td>{{ visita.data }}</td>
        		</tr>
				{% endfor %}
				</table>
            </div>
        </div>
    </div>
{% endblock %}